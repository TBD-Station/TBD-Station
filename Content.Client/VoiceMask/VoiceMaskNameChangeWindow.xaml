<controls:FancyWindow xmlns="https://spacestation14.io"
               xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
               Title="{Loc 'voice-mask-name-change-window'}"
               MinSize="400 175">
    <BoxContainer Orientation="Vertical" Margin="7">
        <BoxContainer Orientation="Vertical" Margin="0 0 0 10"  >
            <BoxContainer HorizontalExpand="True">
                <LineEdit Name="NameSelector" MinWidth="175" Margin="0 0 10 0" />
                <Button Name="NameSelectorSet" Text="{Loc 'voice-mask-name-change-set'}" HorizontalAlignment="Right" HorizontalExpand="True" />
            </BoxContainer>
            <Label StyleClasses="LabelSubText" Text="{Loc 'voice-mask-name-change-info'}" />
        </BoxContainer>
        <BoxContainer HorizontalExpand="True">
            <Label Text="{Loc 'voice-mask-name-change-speech-style'}" />
            <OptionButton MinWidth="100"  Name="SpeechVerbSelector" HorizontalAlignment="Right" HorizontalExpand="True" /> <!-- Populated in AddVerbsAndSounds -->
        </BoxContainer>
        <BoxContainer HorizontalExpand="True" >
            <Label Text="{Loc 'voice-mask-name-change-speech-sound'}" />
            <OptionButton MinWidth="100" Name="SpeechSoundSelector" HorizontalAlignment="Right" HorizontalExpand="True" /> <!-- Populated in AddVerbsAndSounds -->
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
